	public String resultado() {
		String caminho = "resultados.txt";
		String linha2 = "";
		String tudo="";
		ArrayList<Competidor> co = new ArrayList<Competidor>();
		
		try {
			FileReader arquivo = new FileReader(caminho);
			BufferedReader ler = new BufferedReader(arquivo);
			String linha = "";
			try {
				
				while (linha != null) {
					linha = ler.readLine();
					if (linha != null) {
						linha2 = linha2 + linha + "\n";
						Competidor comp = new Competidor();
						comp.setNome(linha.substring(0, linha.length()-3));
						comp.setPontos(Integer.parseInt(linha.substring(linha.length()-3).trim()));
						co.add(comp);
					
				}
			} 
				
			} catch (Exception e) {

			}
				
		} catch (Exception e) {
			JOptionPane.showMessageDialog(null, "Ainda não temos nenhum resultado!!");
		}
		Collections.sort(co);
		for (Competidor c : co) {
			System.out.println(c.toString());
		}
		
		Quiz q = new Quiz();
		for (Competidor texto : co) {
			tudo = tudo + texto.getNome()+": "+texto.getPontos()+"\n";					
		}
		return tudo;

	}
	
